@media screen and (max-width: 928px)
  :root
    font-size 12px
  .c-heading-2
    font-size 2rem
  .o-header--textIntro
    width 100%
  .o-header--intro
    width 100%
    height 100%

@media screen and (max-width: 480px)
  :root
      font-size 8px
  .c-anchor
    font-size 2rem
  .c-anchor--nav
    padding 0
    text-align right
    font-size 2rem
  .c-hamburger-container
    order -1
  nav 
    flex-direction: column
    align-items flex-end
  .c-heading-2
    font-size 1.5rem
  .o-header--textIntro
    width 100%
    top 35%
  .o-header--intro
    width 100%
    height 100%
  .o-header-heading
    &::before, &::after
      content ''
  .o-header::before
    background-image: url('../assets/headerPlant.jpg') !important
    background-position: center !important
    background-size: cover !important
  .o-header-links
    justify-content center
    left 0
    max-width: 100%
    > a 
      height 2rem
      margin 0 2rem
  .o-header--isActive
    &::before
      opacity 1
      background-position: center;
  .c-hamburger
    width 30px
  .o-firstIntro-plant
    left 40%
  .o-firstIntro-heading
    top 9rem
    width 65%
    font-size 2.5rem
    &::before
      top -8rem
  .o-secondIntro-heading
    font-size 2.5rem
    width 100%
    text-align center
  .o-secondIntro-cv
    height 5.5rem
    width 100%
    position relative
  .o-secondIntro-perks
    position relative
    width 100%
    margin 2rem auto 2rem 0
    text-align center
    grid-template 1fr/1fr
  .c-perk
    width 100%
    margin 2rem 0
  .c-project
    width 100%
    grid-template 2fr 1fr/1fr;
  .c-project-title
    font-weight 600
    font-size 2.5rem
  .c-button--round
    width 100%
    height 6rem
    font-size 2rem
  .c-perk-description
    font-size 2rem
  .c-perk-header
    font-size 2rem
  .c-project-info
    position: relative;
    right: 0;
    left: 0;
    text-align: left;
    margin: 0;
    font-size: small;
  .o-skills
    grid-template auto/1fr
    text-align center
  .c-skill-progress
    width 100%
  .c-skill-description
    font-size 1.5rem
  .c-skill-title
    font-size: 2rem
  .o-header--textIntro > p
    font-size x-large
  .c-preview-desktop
    width 100%
  .c-project-preview
    margin: 0
  .u-animation-fadeInto-left, .u-animation-fadeInto-right, .u-animation-fadeInto-top, .c-skill-progress::after
    transform translate(0,0)
    opacity 1
